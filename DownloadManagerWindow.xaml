<Window x:Class="FastInstall.DownloadManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:FastInstall"
        Title="FastInstall - Download Manager"
        Width="800" Height="600"
        MinWidth="600" MinHeight="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip"
        Background="#1E1E1E">
    
    <Window.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Download Manager" 
                       FontSize="20" 
                       FontWeight="Bold"
                       Foreground="White"
                       Margin="0,0,0,5"/>
            <TextBlock x:Name="StatusText"
                       Text="No active downloads"
                       Foreground="#AAAAAA"
                       FontSize="12"/>
        </StackPanel>

        <!-- Downloads List -->
        <DataGrid x:Name="DownloadsDataGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  SelectionMode="Single"
                  HeadersVisibility="Column"
                  GridLinesVisibility="All"
                  AlternatingRowBackground="#10000000"
                  Background="#252525"
                  Foreground="White"
                  BorderBrush="#444444"
                  RowBackground="#2D2D2D"
                  Margin="0,0,0,15">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Game" Binding="{Binding GameName}" Width="2*" IsReadOnly="True"/>
                <DataGridTextColumn Header="Status" Binding="{Binding StatusText}" Width="120" IsReadOnly="True"/>
                <DataGridTextColumn Header="Progress" Binding="{Binding ProgressText}" Width="100" IsReadOnly="True"/>
                <DataGridTextColumn Header="Speed" Binding="{Binding SpeedText}" Width="100" IsReadOnly="True"/>
                <DataGridTemplateColumn Header="Actions" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Pause" 
                                        Width="60" 
                                        Height="25"
                                        Margin="2"
                                        Click="PauseButton_Click"
                                        Tag="{Binding GameId}"
                                        Visibility="{Binding CanPause, Converter={StaticResource BoolToVisibilityConverter}}"
                                        Background="#FF9800"
                                        Foreground="White"
                                        BorderThickness="0"/>
                                <Button Content="Resume" 
                                        Width="60" 
                                        Height="25"
                                        Margin="2"
                                        Click="ResumeButton_Click"
                                        Tag="{Binding GameId}"
                                        Visibility="{Binding CanResume, Converter={StaticResource BoolToVisibilityConverter}}"
                                        Background="#4CAF50"
                                        Foreground="White"
                                        BorderThickness="0"/>
                                <Button Content="Cancel" 
                                        Width="60" 
                                        Height="25"
                                        Margin="2"
                                        Click="CancelButton_Click"
                                        Tag="{Binding GameId}"
                                        Visibility="{Binding CanCancel, Converter={StaticResource BoolToVisibilityConverter}}"
                                        Background="#D32F2F"
                                        Foreground="White"
                                        BorderThickness="0"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Footer Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Refresh" 
                    Width="80" 
                    Height="30"
                    Margin="0,0,10,0"
                    Click="RefreshButton_Click"
                    Background="#555555"
                    Foreground="White"
                    BorderThickness="0"/>
            <Button Content="Close" 
                    Width="80" 
                    Height="30"
                    Click="CloseButton_Click"
                    Background="#666666"
                    Foreground="White"
                    BorderThickness="0"/>
        </StackPanel>
    </Grid>
</Window>
